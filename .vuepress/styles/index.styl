}

.navbar {
  font-family: GLOBAL_FONT;
  transition: background 0.35s ease-out, backdrop-filter 0.35s ease-out;
  border-radius: 0 0 1rem 1rem;
  box-shadow: none !important;
  background: rgba(255, 255, 255, 0) !important;

  .home-link {
    .logo {
      margin-right: 8px;
      transition: all 0.3s ease-in;
    }

    .site-name {
      font-family: GLOBAL_FONT1;
      transition: all 0.49s ease-in;
      color: #333;
      text-shadow: -2px 0 #fefefe, 2px 0 #fefefe, 0 2px #fefefe, 0 -2px #fefefe;
      color: #fefefe;
      text-shadow: -2px 0 #333, 2px 0 #333, 0 2px #333, 0 -2px #333;
      font-weight: 600;
      font-size: 1.8rem;
    }
  }

  .links {
    background-color: rgba(255, 255, 255, 0) !important;

    .color-picker {
      display: none;
    }

    .search-box {
      transition: all 0.2s ease;

      .iconfont.reco-search {
        transition: all 0.2s ease;
        color: #fff;
      }

      input {
        transition: all 0.2s ease;
        border-radius: 1rem;
        background: rgba(255, 255, 255, 0.3) !important;
      }

      input.focused {
        border-color: $accentColor !important;
      }

      input.focused + .reco-search {
        color: $accentColor !important;
      }
    }

    .nav-links {
      .nav-item {
        i {
          color: #eee !important;
          transition: all 0.3s ease;
        }

        .nav-link {
          color: #eee !important;
          transition: all 0.3s ease;
        }

        .dropdown-title {
          color: #eee !important;
          transition: all 0.3s ease;

          .arrow {
            border-top: 6px solid #eee !important;
            transition: all 0.3s ease;
          }
        }

        .dropdown-item {
          .nav-link {
            color: #555 !important;

            &:hover {
              transition: all 0.3s ease;
              color: $accentColor !important;
            }
          }
        }

        &:hover {
          .dropdown-item {
            .nav-link {
              color: #555 !important;

              &:hover {
                color: $accentColor !important;
              }
            }
          }

          i {
            color: $accentColor !important;
          }

          .nav-link {
            color: $accentColor !important;
            transition: all 0.3s ease;
          }

          .dropdown-title {
            color: $accentColor !important;

            .arrow {
              border-top: 6px solid $accentColor !important;
            }
          }
        }
      }
    }
  }

  .sidebar-button {
    transition: all 0.3s ease-in;
    color: #fefefe;
  }
}

